# SnifferX Environment Configuration
# Copy this file to .env and configure your settings

# Backend Integration (Optional)
SNIFFERX_API_KEY=your_api_key_here
SNIFFERX_BACKEND_ENABLED=false
SNIFFERX_WEBHOOK_URL=https://your-backend.com/api/threats

# Audio Settings
SNIFFERX_AUDIO_ENABLED=true
SNIFFERX_AUDIO_VOLUME=0.7

# Detection Thresholds (Optional - defaults in config.js)
# SNIFFERX_DDOS_THRESHOLD=300
# SNIFFERX_PORT_SCAN_THRESHOLD=100

# Logging
SNIFFERX_LOG_LEVEL=info
SNIFFERX_LOG_TO_FILE=true
